<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Platform" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Platform" parent="Base.Theme.Platform" />

    <!-- AppBarOverlay for Toolbars in Dark Action Bar context -->
    <style name="Theme.Platform.AppBarOverlay" parent="ThemeOverlay.Material3.Toolbar.Surface" />

    <!-- PopupOverlay for Popup Menus in Light context -->
    <style name="Theme.Platform.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

</resources>
